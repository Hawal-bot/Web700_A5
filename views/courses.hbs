<!DOCTYPE html>
<html>
<head>
    <title>Courses</title>
</head>
<body>
    <h2>Courses</h2>
    <a href="/courses/add" class="btn btn-success float-right">Add New Course</a>
    {{#if courses}}
    <table class="table">
        <thead>
            <tr>
                <th>Course Code</th>
                <th>Course Description</th>
                <th><hr></hr></th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <td><a href="/course/{{this.courseId}}">{{this.courseCode}}</a></td>
                <td><a href="/students?course={{this.courseId}}">{{this.courseDescription}}</a></td>
                <td><a href="/course/delete/{{this.courseId}}" class="btn btn-danger">Remove</a></td> 
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{else}}
    <p>No courses available</p>
    {{/if}}
</body>
</html>
